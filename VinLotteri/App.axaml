<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VinLotteri"
             x:Class="VinLotteri.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="Burgundy">#800020</SolidColorBrush>
        <SolidColorBrush x:Key="BurgundyLight">#8c1633</SolidColorBrush>
        <SolidColorBrush x:Key="Grey">#F0F0F0</SolidColorBrush>
        <StaticResource x:Key="TabItemHeaderSelectedPipeFill" ResourceKey="Burgundy" />
        <StaticResource x:Key="TabItemHeaderForegroundUnselectedPointerOver" ResourceKey="Grey" />
        <StaticResource x:Key="TabItemHeaderForegroundSelectedPointerOver" ResourceKey="Burgundy" />
    </Application.Resources>
</Application>
