<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VinLotteri.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VinLotteri.Views.MainWindow"
        Title="VinLotteri">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl Name="TabControl">
        <TabControl.Styles>
            <StyleInclude Source="/Assets/TabStyles.xaml"/>
        </TabControl.Styles>
        
        <TabItem Content="{Binding TicketsList}">
            <TabItem.Header>
                <TextBlock VerticalAlignment="Center" Padding="10 0 0 0">Tickets</TextBlock>
            </TabItem.Header>
        </TabItem>
        <TabItem Content="{Binding Drawing}">
            <TabItem.Header>
                <TextBlock VerticalAlignment="Center" Padding="10 0 0 0">Drawing</TextBlock>
            </TabItem.Header>
        </TabItem>
    </TabControl>

</Window>
